# ðŸŒ± Booster dApp - Central Configuration Template
# ===========================================
# Copy this file to .env and adjust values as needed
# This is the SINGLE source of truth for all ports, URLs and configuration
# All services (Frontend, Backend, Blockchain) read from this file
# ===========================================

# Network Ports
HARDHAT_PORT=8545
FRONTEND_PORT=3000
BACKEND_PORT=8282
WEBSOCKET_PORT=6001

# Hosts/Domains
HARDHAT_HOST=127.0.0.1
FRONTEND_HOST=localhost
BACKEND_HOST=127.0.0.1

# Full URLs (constructed from above)
HARDHAT_URL=http://127.0.0.1:8545
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://127.0.0.1:8282
BACKEND_API_URL=http://127.0.0.1:8282/api
WEBSOCKET_URL=ws://127.0.0.1:6001

# Environment
NODE_ENV=development
APP_ENV=local

# Blockchain Configuration
CHAIN_ID=31337

# WalletConnect (optional)
WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# Development Settings
HOT_RELOAD=true
DEBUG=true

# Security (for production)
# JWT_SECRET=your-jwt-secret-here
# API_KEY=your-api-key-here

# Database (Laravel)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# Cache/Session
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Swiss Quality Features
SWISS_COMPLIANCE_ENABLED=true
QUALITY_ASSURANCE_MODE=development
